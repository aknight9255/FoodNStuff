@model IEnumerable<FoodNStuff.MVC.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Product", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFood)
        </th>
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => product.ProductName)
            </td>
            <td>
                $@Html.DisplayFor(item => product.Price)
            </td>
            <td>
                @Html.DisplayFor(item => product.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor(item => product.IsFood)
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { id = product.ProductID }) |
                @Html.ActionLink("More Info", "Details", new { id = product.ProductID }) |
                @Html.ActionLink("No Longer Carry", "Delete", new { id = product.ProductID })
            </td>
        </tr>
    }
</table>

