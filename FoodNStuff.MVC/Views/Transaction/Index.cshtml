@model IEnumerable<FoodNStuff.MVC.Models.Transaction>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Start New Transaction", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th></th>
    </tr>
    @foreach (var transaction in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => transaction.Customer.FullName)
            </td>
            <td>
                @Html.DisplayFor(item => transaction.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(item => transaction.Product.Price)
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { id = transaction.TransactionID }) |
                @Html.ActionLink("More Info", "Details", new { id = transaction.TransactionID }) |
                @Html.ActionLink("Delete", "Delete", new { id = transaction.TransactionID })
            </td>
        </tr>
    }
</table>

